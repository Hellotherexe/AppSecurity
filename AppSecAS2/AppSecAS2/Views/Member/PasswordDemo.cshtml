@{
    ViewData["Title"] = "Password Validation Demo";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>
        <p class="lead">Test the real-time password validation below.</p>
        <hr />

        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group mb-3">
                        <label for="DemoPassword" class="form-label">Enter a Password</label>
                        <input type="password" 
                               class="form-control" 
                               id="DemoPassword" 
                               data-password-validation
                               placeholder="Type your password here..." 
                               autocomplete="off" />
                        <small class="form-text text-muted">Try different combinations to see the validation in action.</small>
                    </div>

                    <div class="form-group mb-3">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="togglePasswordVisibility()">
                            <i class="bi bi-eye"></i> Toggle Visibility
                        </button>
                    </div>
                </form>

                <div class="alert alert-info mt-4">
                    <h5><i class="bi bi-info-circle"></i> Password Requirements:</h5>
                    <ul class="mb-0">
                        <li>Minimum 12 characters</li>
                        <li>At least one lowercase letter (a-z)</li>
                        <li>At least one uppercase letter (A-Z)</li>
                        <li>At least one digit (0-9)</li>
                        <li>At least one special character (!@@#$%^&amp;*...)</li>
                    </ul>
                </div>

                <div class="mt-4">
                    <h5>Example Valid Passwords:</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <code>MyP@@ssw0rd123</code>
                            <button class="btn btn-sm btn-link float-end" onclick="fillPassword('MyP@ssw0rd123')">Try it</button>
                        </li>
                        <li class="list-group-item">
                            <code>Str0ng!Pass2024</code>
                            <button class="btn btn-sm btn-link float-end" onclick="fillPassword('Str0ng!Pass2024')">Try it</button>
                        </li>
                        <li class="list-group-item">
                            <code>B00kworms#Online</code>
                            <button class="btn btn-sm btn-link float-end" onclick="fillPassword('B00kworms#Online')">Try it</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Member" asp-action="Register" class="btn btn-primary">Go to Registration Form</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/password-validation.js" asp-append-version="true"></script>
    <script>
        function togglePasswordVisibility() {
            const passwordField = document.getElementById('DemoPassword');
            const type = passwordField.type === 'password' ? 'text' : 'password';
            passwordField.type = type;
        }

        function fillPassword(password) {
            const passwordField = document.getElementById('DemoPassword');
            passwordField.value = password;
            passwordField.dispatchEvent(new Event('input', { bubbles: true }));
        }
    </script>
}
