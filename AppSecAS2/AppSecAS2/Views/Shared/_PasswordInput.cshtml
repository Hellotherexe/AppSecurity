@* 
    Password Input Partial View with Client-Side Validation
    Usage: <partial name="_PasswordInput" model='new { Id = "Password", Name = "Password", Label = "Password", Required = true }' />
*@

@{
    var id = ViewData["Id"]?.ToString() ?? "Password";
    var name = ViewData["Name"]?.ToString() ?? "Password";
    var label = ViewData["Label"]?.ToString() ?? "Password";
    var required = ViewData["Required"] != null ? (bool)ViewData["Required"] : true;
    var helpText = ViewData["HelpText"]?.ToString();
}

<div class="form-group mb-3">
    <label for="@id" class="form-label">@label</label>
    <input type="password" 
           class="form-control" 
           id="@id" 
           name="@name" 
           data-password-validation
           @(required ? "required" : "")
           autocomplete="new-password" />
    
    @if (!string.IsNullOrEmpty(helpText))
    {
        <small class="form-text text-muted">@helpText</small>
    }
    
    <span asp-validation-for="@name" class="text-danger"></span>
    
    @* Feedback container will be injected here by JavaScript *@
</div>

@section Scripts {
    <script src="~/js/password-validation.js" asp-append-version="true"></script>
}
